<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:scaleType="centerInside"
    tools:context="com.stit.toolcab.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能工具柜"
                android:textColor="#062af9"
                android:textAlignment="center"
                android:textSize="50px"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"/>
            <!--android:layout_marginLeft="550px"-->
            <!--android:layout_marginTop="10px"-->
            <TextView
                android:id="@+id/appcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#062af9"
                android:textAlignment="center"
                android:layout_marginTop="90px"
                android:layout_centerHorizontal="true"
                android:textSize="30px"
                android:text="01号柜" />
            <!--android:layout_marginLeft="820px"-->
            <!--android:layout_marginTop="30px"-->
            <ImageView
                android:id="@+id/ivdianchi"
                android:layout_width="70px"
                android:layout_height="30px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:src="@drawable/dianchi4" />
            <ImageView
                android:id="@+id/ivbj"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@drawable/bj3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="390px"
                android:layout_height="58px"
                android:layout_marginTop="0px"
                android:drawableLeft="@drawable/username"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="输入用户名"
                android:paddingLeft="0px"
                android:singleLine="true"
                android:text="admin"
                android:textSize="30px" />




                <EditText
                    android:id="@+id/password"
                    android:layout_width="390px"
                    android:layout_height="58px"
                    android:hint="请输入登录密码"
                    android:text="3013507"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30px"
                    android:paddingLeft="0px"
                    android:drawableLeft="@drawable/password"
                    android:layout_marginTop="30px"
                    />






            <ImageButton
                android:id="@+id/login"
                android:layout_width="390px"
                android:layout_height="56px"
                android:text="登录"
                android:textSize="30px"
                android:layout_marginTop="30px"
                android:layout_gravity="center"
                android:src="@drawable/denglu"
                android:background="#0026fa"
                android:textColor="#FFFFFF"
                />



            <ImageButton
                android:id="@+id/face"
                android:layout_width="390px"
                android:layout_height="56px"
                android:layout_gravity="center"
                android:src="@drawable/renlianshibie"
                android:layout_marginTop="30px"/>



        </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>

