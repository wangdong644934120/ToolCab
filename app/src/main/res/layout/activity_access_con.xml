<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.stit.toolcab.activity.AccessConActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--存取信息展示区-->
        <LinearLayout
            android:id="@+id/linnerLayouttxl"
            android:layout_width="match_parent"
            android:layout_height="620px"
            android:orientation="horizontal"
            >

            <!--存放信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--存放信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/savecount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:gravity="right|center_vertical"
                        android:text="共存放0个"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--存放信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="570px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tablesave"
                        android:layout_width="match_parent"
                        android:layout_height="570px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="620px"
                android:layout_marginTop="0px"
                android:background="#a7aba9" />

            <!--取出信息展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--取出信息个数展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/outcount"
                        android:layout_width="match_parent"
                        android:layout_height="52px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:gravity="right|center_vertical"
                        android:text="共取出0个"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--取出信息内容展示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="570px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/tableout"
                        android:layout_width="match_parent"
                        android:layout_height="560px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#a7aba9" />
        <!--确认取消按钮展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnzq"
                android:layout_width="80px"
                android:layout_height="60px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:layout_marginRight="2px"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnyw"
                android:layout_width="80px"
                android:layout_height="60px"
                android:layout_weight="1"
                android:layout_marginLeft="2px"
                android:gravity="center"
                android:text="取消"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
