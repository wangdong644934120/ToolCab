<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.stit.toolcab.activity.PersonActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="0px"
        android:orientation="horizontal">

        <com.bin.david.form.core.SmartTable
            android:id="@+id/table"
            android:layout_width="1400px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#303F9F"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">
            <!--添加修改删除按钮行-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:textSize="20px"
                    android:text="添加"
                 />
                <Button
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:text="修改"
                    android:textSize="20px"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="6px"
                    android:layout_marginRight="6px"
                    />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:textSize="20px"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:text="删除"
                    android:layout_marginLeft="6px"
                    android:layout_marginRight="6px"/>
                <Button
                    android:id="@+id/empty"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:textSize="20px"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:text="清空" />
            </LinearLayout>

            <!--编号姓名行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓    名:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="输入姓名"
                    android:textColor="@color/black"
                    android:background="@drawable/loginedit_bg"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="6px"
                    android:text="工    号:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="输入数字:1-700"
                    android:textColor="@color/black"
                    android:background="@drawable/loginedit_bg"
                    android:inputType="number"
                    android:singleLine="true" />
            </LinearLayout>

            <!--用户名密码行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户名:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="输入用户名"
                    android:textColor="@color/black"
                    android:background="@drawable/loginedit_bg"
                    android:ems="10"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6px"
                    android:layout_weight="1"
                    android:text="密    码:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="输入密码"
                    android:textColor="@color/black"
                    android:background="@drawable/loginedit_bg"
                    android:singleLine="true" />




            </LinearLayout>

            <!--指纹行角色-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="指    纹:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/zhiwenluru"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:textSize="16px"
                        android:text="点此录入指纹" />
                </LinearLayout>
                <!--角色-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6px"
                        android:layout_weight="1"
                        android:text="角    色:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/putongyh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:text="普通工人"/>
                        <RadioButton
                            android:id="@+id/weixiuyh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="维修工人"/>
                    </RadioGroup>
                    <!--<Button-->
                        <!--android:id="@+id/zhiwenluru"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_marginLeft="6px"-->
                        <!--android:background="@color/colorPrimary"-->
                        <!--android:textColor="@color/colorWhite"-->
                        <!--android:text="点此录入指纹" />-->
                </LinearLayout>


            </LinearLayout>

            <!--视频行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5px"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.cloudwalk.gldisplay.GLFrameSurface
                        android:id="@+id/sr_vis_view"
                        android:layout_width="300px"
                        android:layout_height="400px"
                        android:layout_gravity="center" />
                    <Button
                        android:id="@+id/dakaishipin"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="20px"
                        android:textSize="16px"
                        android:text="打开视频" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="300px"
                        android:layout_height="400px"
                        android:layout_gravity="center"
                        android:background="@color/black"/>

                    <Button
                        android:id="@+id/caijizhaopian"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="20px"
                        android:textSize="16px"
                        android:text="采集照片" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
